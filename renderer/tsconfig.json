{
  "extends": "../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": ["/*"],
      "@/components/*": ["components/*"],
      "@/images/*": ["public/images/*"],
      "@/config/*": ["config/*"],
      "@/utils/*": ["utils/*"],
      "@/styles/*": ["styles/*"],
    }}
}
